---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import fitbauImage from '../images/projects/fitbau-preview.png';
import plannerImage from '../images/projects/planner-preview.png';

const pageTitle = 'Projects';

const projects = [
  {
    title: 'Fitbau',
    description: `
    A modern fitness tracking Progressive Web App designed for mobile-first experience. 
    Users can create custom workouts, track their progress in real-time during gym sessions, 
    and maintain a detailed history of their fitness journey.`,
    image: fitbauImage,
    imageAlt: 'Fitbau project preview',
    technologies: ['Nextjs', 'Typescript', 'PWA', 'Tailwind', 'MySQL', 'Vercel'],
    links: {
      live: '',
      github: 'https://github.com/vguleaev/fitbau',
    },
  },
  {
    title: 'Planner',
    description: `
    A task planner app that helps organize and plan your goals for today, week or month.
    You can create backlog of tasks with different priorities and due dates. You can complete tasks with a simple click, 
    view history of completed tasks and edit them.
    `,
    image: plannerImage,
    imageAlt: 'Planner project preview',
    technologies: ['React', 'TypeScript', 'Vite', 'Hono', 'PostgreSQL'],
    links: {
      live: '',
      github: 'https://github.com/vguleaev/planner',
    },
  },
];
---

<BaseLayout pageTitle={pageTitle}>
  <div class="max-w-6xl px-4 pt-6 lg:pt-10 pb-12 sm:px-6 lg:px-8 md:mx-auto">
    <h1 class="text-2xl font-bold md:text-4xl md:leading-tight dark:text-white mb-3">Projects</h1>
    <p class="text-gray-600 dark:text-gray-400 mb-8">A collection of my side projects and personal experiments.</p>

    <div class="grid sm:grid-cols-2 gap-8">
      {
        projects.map((project) => (
          <div class="bg-white dark:bg-neutral-800 rounded-xl shadow-sm hover:shadow-lg transition-all border border-gray-200 dark:border-neutral-700">
            <div class="overflow-hidden rounded-t-xl">
              <Image
                src={project.image}
                alt={project.imageAlt}
                class="w-full h-auto hover:scale-105 transition-transform duration-300"
                width={800}
                height={400}
              />
            </div>
            <div class="p-6">
              <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-200 mb-2">{project.title}</h2>
              <p class="text-gray-600 dark:text-gray-400 mb-4">{project.description}</p>
              <div class="flex flex-wrap gap-2 mb-4">
                {project.technologies.map((tech) => (
                  <span class="px-3 py-1 text-sm bg-gray-100 dark:bg-neutral-700 rounded-full text-gray-700 dark:text-gray-300">
                    {tech}
                  </span>
                ))}
              </div>
              <div class="flex gap-4">
                {project.links.live && (
                  <a
                    href={project.links.live}
                    class="text-rose-600 hover:text-rose-700 dark:text-rose-400 dark:hover:text-rose-300 font-medium">
                    View Project →
                  </a>
                )}
                <a
                  href={project.links.github}
                  class="text-rose-600 hover:text-rose-700 dark:text-rose-400 dark:hover:text-rose-300 font-medium">
                  GitHub →
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</BaseLayout>
